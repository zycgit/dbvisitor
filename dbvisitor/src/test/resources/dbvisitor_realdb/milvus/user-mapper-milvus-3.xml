<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="net.hasor.realdb.milvus.dto3.UserInfoMilvus3Mapper">
    <resultMap id="userInfoResultMap" type="net.hasor.realdb.milvus.dto3.UserInfoMilvus3">
        <id property="uid" column="uid"/>
        <result property="name" column="name"/>
        <result property="loginName" column="loginName"/>
        <result property="loginPassword" column="loginPassword"/>
        <result property="v" column="v"/>
    </resultMap>

    <insert id="insertUser">
        INSERT INTO tb_mapper_user_milvus (uid, name, loginName, loginPassword, v)
        VALUES (#{uid}, #{name}, #{loginName}, #{loginPassword}, #{v})
    </insert>

    <delete id="deleteUser">
        DELETE FROM tb_mapper_user_milvus WHERE uid = #{uid}
    </delete>

    <select id="queryAll" resultMap="userInfoResultMap">
        /*+ consistency_level=Strong */ SELECT * FROM tb_mapper_user_milvus limit 10
    </select>
</mapper>
