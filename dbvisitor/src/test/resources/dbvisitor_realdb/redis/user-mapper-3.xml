<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//dbvisitor.net//DTD Mapper 1.0//EN" "https://www.dbvisitor.net/schema/dbvisitor-mapper.dtd">
<mapper namespace="net.hasor.realdb.redis.dto3.UserInfo3Mapper">
    <insert id="saveUser">
        set #{'user_' + uid}
            #{info, typeHandler=net.hasor.dbvisitor.types.handler.json.JsonTypeHandler}
    </insert>

    <select id="loadUser1" resultTypeHandler="net.hasor.dbvisitor.types.handler.json.JsonTypeHandler"
            resultType="net.hasor.realdb.redis.dto3.UserInfo3">
        get #{'user_' + uid}
    </select>

    <select id="loadUser2" resultType="net.hasor.realdb.redis.dto1.UserInfo1">
        get #{'user_' + uid}
    </select>

    <delete id="deleteUser">
        del #{'user_' + uid}
    </delete>
</mapper>