<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//dbvisitor.net//DTD Mapper 1.0//EN"
        "https://www.dbvisitor.net/schema/dbvisitor-mapper.dtd">
<mapper namespace="net.hasor.test.xml.template">

    <!-- selectTemplate 和 insertTemplate -->
    <entity id="SelectInsertTemplateEntity" table="user_info_si" type="net.hasor.dbvisitor.test.oneapi.model.UserInfo">
        <id column="id" property="id"/>
        <mapping column="name" property="name" selectTemplate="UPPER(name)" insertTemplate="LOWER(?)"/>
    </entity>

    <!-- setValueTemplate 和 whereColTemplate -->
    <entity id="UpdateWhereTemplateEntity" table="user_info_uw" type="net.hasor.dbvisitor.test.oneapi.model.UserInfo">
        <id column="id" property="id"/>
        <mapping column="name" property="name" setValueTemplate="TRIM(?)" whereColTemplate="LOWER(name)"/>
    </entity>

    <!-- 所有 5 个 template 属性同时设置在一列上 -->
    <entity id="AllTemplatesEntity" table="user_info_at" type="net.hasor.dbvisitor.test.oneapi.model.UserInfo">
        <id column="id" property="id"/>
        <mapping column="name" property="name"
                 selectTemplate="UPPER(name)"
                 insertTemplate="LOWER(?)"
                 setValueTemplate="TRIM(?)"
                 whereColTemplate="LOWER(name)"
                 whereValueTemplate="LOWER(?)"/>
    </entity>

</mapper>
