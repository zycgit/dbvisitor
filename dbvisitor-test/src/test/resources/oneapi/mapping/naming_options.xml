<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//dbvisitor.net//DTD Mapper 1.0//EN"
        "https://www.dbvisitor.net/schema/dbvisitor-mapper.dtd">
<mapper namespace="net.hasor.test.xml.naming">

    <!-- mapUnderscoreToCamelCase=true -->
    <entity id="CamelCaseEntity" table="user_info" type="net.hasor.dbvisitor.test.oneapi.model.UserInfo"
            mapUnderscoreToCamelCase="true">
        <id column="id" property="id"/>
        <mapping column="name" property="name"/>
        <mapping column="create_time" property="createTime"/>
    </entity>

    <!-- caseInsensitive=true -->
    <entity id="CaseInsensitiveEntity" table="user_info_ci" type="net.hasor.dbvisitor.test.oneapi.model.UserInfo"
            caseInsensitive="true">
        <id column="id" property="id"/>
        <mapping column="name" property="name"/>
    </entity>

    <!-- useDelimited=true -->
    <entity id="DelimitedEntity" table="user_info_delim" type="net.hasor.dbvisitor.test.oneapi.model.UserInfo"
            useDelimited="true">
        <id column="id" property="id"/>
        <mapping column="name" property="name"/>
    </entity>

    <!-- all naming options combined -->
    <entity id="AllNamingEntity" table="user_info_all" type="net.hasor.dbvisitor.test.oneapi.model.UserInfo"
            mapUnderscoreToCamelCase="true" caseInsensitive="false" useDelimited="true">
        <id column="id" property="id"/>
        <mapping column="name" property="name"/>
        <mapping column="create_time" property="createTime"/>
    </entity>

</mapper>
