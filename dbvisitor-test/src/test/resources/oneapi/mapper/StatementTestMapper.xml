<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//dbvisitor.net//DTD Mapper 1.0//EN"
        "https://www.dbvisitor.net/schema/dbvisitor-mapper.dtd">
<mapper namespace="oneapi.StatementTestMapper">

    <!-- resultMap 映射 -->
    <resultMap id="userInfoResultMap" type="net.hasor.dbvisitor.test.oneapi.model.UserInfo">
        <result column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="age" property="age"/>
        <result column="email" property="email"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <!-- 插入（含主键） -->
    <insert id="insertUserWithId">
        insert into user_info (id, name, age, email, create_time)
        values (#{id}, #{name}, #{age}, #{email}, CURRENT_TIMESTAMP)
    </insert>

    <!-- 插入（不含主键，自增） -->
    <insert id="insertUser">
        insert into user_info (name, age, email, create_time)
        values (#{name}, #{age}, #{email}, CURRENT_TIMESTAMP)
    </insert>

    <!-- 按 ID 查询 -->
    <select id="queryUserById" resultMap="userInfoResultMap">
        select * from user_info where id = #{id}
    </select>

    <!-- 查询全部（用于分页测试） -->
    <select id="queryAllUsers" resultType="net.hasor.dbvisitor.test.oneapi.model.UserInfo">
        select * from user_info order by id asc
    </select>

    <!-- 按名称模糊查询 -->
    <select id="queryUsersByName" resultMap="userInfoResultMap">
        select * from user_info where name like #{name} order by id asc
    </select>

    <!-- 更新邮箱 -->
    <update id="updateUserEmail">
        update user_info set email = #{email} where id = #{id}
    </update>

    <!-- 按 ID 删除 -->
    <delete id="deleteUserById">
        delete from user_info where id = #{id}
    </delete>

    <!-- 按名称删除（批量） -->
    <delete id="deleteUsersByName">
        delete from user_info where name like #{name}
    </delete>

</mapper>
