<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//dbvisitor.net//DTD Mapper 1.0//EN"
        "https://www.dbvisitor.net/schema/dbvisitor-mapper.dtd">
<mapper namespace="net.hasor.test.xml.indexcolsub">

    <!-- 使用 <column> 子元素方式声明索引 -->
    <entity id="IndexColSubEntity" table="user_info" type="net.hasor.dbvisitor.test.model.UserInfo">
        <id column="id" property="id"/>
        <mapping column="name" property="name"/>
        <mapping column="email" property="email"/>
        <index name="idx_cols_sub" unique="true" comment="index via sub elements">
            <column>name</column>
            <column>email</column>
        </index>
    </entity>

</mapper>
